

<div class="results">
<%= form_tag(search_path, method: :get) do %>
  <%= text_field_tag :term %>
  <%= submit_tag 'Search', class:"w3-button w3-black w3-padding-large w3-large w3-margin-top" %>
<% end %>

<hr>
Found: <%= @totalHits %> entries
<% @page_results.each do |target| %>
  <div class="card" style="width: 60rem;">
    <div class="card-body">
      <h5 class="card-title"><%= target["_source"]["title"] %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><a href=<%= target["_source"]["url"] %> class="card-link"><%= target["_source"]["url"] %></a></h6>
      <p class="card-text"><%= target["_source"]["description"] %></p>
    </div>
  </div>
<% end %>
</div>
